<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentoContenedor"
    tools:context="com.example.actividades.principal">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <TextView
            android:id="@+id/editText4"
            android:layout_width="75dp"
            android:layout_height="15dp"
            android:layout_marginStart="48dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Challenge3"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/editText5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge4"
            app:layout_constraintVertical_bias="1.0" />


        <TextView
            android:id="@+id/editText6"
            android:layout_width="89dp"
            android:layout_height="16dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Challenge1"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/editText5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge4"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/editText5"
            android:layout_width="75dp"
            android:layout_height="23dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Challenge4"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintTop_toBottomOf="@+id/challenge4"
            app:layout_constraintVertical_bias="0.077"
            tools:layout_editor_absoluteX="172dp" />

        <TextView
            android:id="@+id/editText3"
            android:layout_width="83dp"
            android:layout_height="22dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Challenge3"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/editText2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/challenge5"
            app:layout_constraintVertical_bias="0.607" />

        <ImageButton
            android:id="@+id/challenge3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="36dp"
            android:background="#39FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/Challenge1"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/barSuperior2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#DBCDF2"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/challenge4"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:background="#19FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/challenge2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/challenge2"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageButton
            android:id="@+id/challenge5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:background="#2FFFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/challenge3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.862"
            app:layout_constraintStart_toEndOf="@+id/challenge3"
            app:layout_constraintTop_toTopOf="@+id/challenge3"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/barSuperior"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#DBCDF2"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/labeldestacados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Challenges Destacados"
            android:textAllCaps="false"
            android:textColor="#133F76"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible"
            app:fontFamily="cursive"
            app:layout_constraintBottom_toBottomOf="@+id/barSuperior"
            app:layout_constraintStart_toStartOf="@+id/barSuperior"
            app:layout_constraintTop_toTopOf="@+id/barSuperior"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/Challenge1"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="#19FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/challenge3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/challenge3"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageButton
            android:id="@+id/challenge2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="48dp"
            android:background="#2FFFFFFF"
            app:layout_constraintStart_toEndOf="@+id/challenge4"
            app:layout_constraintTop_toBottomOf="@+id/barSuperior2"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageButton
            android:id="@+id/challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2FFFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/challenge2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.547"
            app:layout_constraintStart_toEndOf="@+id/challenge2"
            app:layout_constraintTop_toTopOf="@+id/challenge2"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="92dp"
            android:layout_height="16dp"
            android:layout_marginStart="48dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Challenge1"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/editText2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Challenge1"
            app:layout_constraintVertical_bias="0.576" />

        <TextView
            android:id="@+id/editText2"
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Challenge2"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/challenge3"
            app:layout_constraintVertical_bias="0.323"
            tools:layout_editor_absoluteX="180dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09286899" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.46" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="254dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:text="Challenges Destacados"
            android:textAllCaps="false"
            android:textColor="#133F76"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible"
            app:fontFamily="cursive"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/barSuperior2"
            app:layout_constraintTop_toTopOf="@+id/barSuperior2"
            app:layout_constraintVertical_bias="0.384" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_navigation" />


</RelativeLayout>